<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kittipat.activitystarterex.MainActivity">


    <Button
        android:id="@+id/btnSendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="32dp"
        android:text="Send Data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.116" />

    <Button
        android:id="@+id/btnSendDataParcelable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="180dp"
        android:text="Send Parcelable"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSendData"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSendData"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnSendDataToThisPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Send Data to this page"
        app:layout_constraintLeft_toLeftOf="@+id/btnSendData"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSendDataParcelable" />

    <Button
        android:id="@+id/btnSendDataToFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Send data to Fragment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnSendDataToThisPage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSendDataToThisPage" />
</android.support.constraint.ConstraintLayout>
